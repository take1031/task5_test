<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "") %> 件のエラーがあります。</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :商品名 %>
    <%= form.text_field :name, id: :product_name, size:"60x10" %>
  </div>

  <div>
    <%= form.label :値段 %>
    <%= form.text_field :price, id: :product_price, size:"60x10" %>
  </div>

  <div>
    <%= form.label :在庫 %>
    <%= form.text_field :stock, id: :product_stock, size:"60x10" %>
  </div>

  <div>
    <%= form.label :説明 %>
    <%= form.text_area :description, id: :product_description, size: "100x10" %>
  </div>

  

  <div>
      <%= form.label :画像 %>
      <%= form.file_field :image %>
  </div>


  <div class="actions">
    <%= form.submit "投稿する！" %>
  </div>
<% end %>
